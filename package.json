{
  "name": "fabo-svelte-starter",
  "version": "0.1.1",
  "description": "svelte express mongo (serverless) stack - pre-alpha!",
  "type": "module",
  "devDependencies": {
    "concurrently": "^6.5.1",
    "wait-on": "^6.0.1"
  },
  "scripts": {
    "fabo": "nodemon --exec fabo -c",
    "clean": "rm -rf node_modules server/node_modules .fabo/*/node_modules",
    "client:dev": "cd client && pnpm run dev",
    "client:wdev": "wait-on tcp:4000 && cd client && pnpm run dev",
    "admin:dev": "wait-on tcp:4000 && cd admin && pnpm run dev",
    "server:dev": "wait-on './server/.fabo/router.js' && cd server && pnpm run dev",
    "server:dev_prod": "cd server && pnpm run dev_prod",
    "server:deploy": "cd server && pnpm run deploy",
    "all": "concurrently -k -n \"fabo,server,client\" -c \"magenta.bold,yellow.bold,blue.bold\" \"pnpm run fabo\" \"pnpm run server:dev\" \"pnpm run client:wdev\" ",
    "all:dev": "concurrently -k -n \"fabo,server,client\" -c \"magenta.bold,yellow.bold,blue.bold\" \"pnpm run fabo\" \"pnpm run server:dev\" \"pnpm run client:wdev\" ",
    "api": "concurrently -k -n \"fabo,server\" -c \"magenta.bold,yellow.bold\" \"pnpm run fabo\" \"pnpm run server:dev\" ",
    "api:dev": "concurrently -k -n \"fabo,server\" -c \"magenta.bold,yellow.bold\" \"pnpm run fabo\" \"pnpm run server:dev\" ",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "imports": {
    "#server": "./server/*",
    "#client/*": "./client/*"
  },
  "engines": {
    "node": ">=14"
  },
  "author": "",
  "license": "MIT",
  "nodemonConfig": {
    "ignore": [
      "client/*",
      "server/*",
      ".fabo/*/node_modules/*",
      "docs/*"
    ],
    "watch": [
      "./models/*",
      "./shared/*"
    ],
    "ext": ".js, .json, .yaml, .hbs"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "express-rate-limit": "^5.5.1",
    "fabo": "link:../fabo",
    "nodemon": "^2.0.15"
  }
}
